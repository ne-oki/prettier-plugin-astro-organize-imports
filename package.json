{
  "name": "prettier-plugin-astro-organize-imports",
  "version": "0.3.3",
  "description": "A Prettier plugin for formatting imports in Astro files",
  "keywords": [
    "plugin",
    "formatter",
    "prettier",
    "astro",
    "sort-imports"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ot07/prettier-plugin-astro-organize-imports.git"
  },
  "homepage": "https://github.com/ot07/prettier-plugin-astro-organize-imports#readme",
  "bugs": {
    "url": "https://github.com/ot07/prettier-plugin-astro-organize-imports/issues"
  },
  "license": "MIT",
  "author": "ot07",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.6.0"
  },
  "packageManager": "pnpm@8.6.0",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "_esbuild": "node build.mjs",
    "_clean": "rimraf dist",
    "build": "pnpm _clean && pnpm _esbuild",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm build && vitest --run",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "rimraf": "^5.0.1",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "prettier": "^3.0",
    "prettier-plugin-astro": "*",
    "prettier-plugin-tailwindcss": "*"
  },
  "peerDependenciesMeta": {
    "prettier-plugin-astro": {
      "optional": true
    },
    "prettier-plugin-tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
